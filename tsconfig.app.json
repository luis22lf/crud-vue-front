{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [ "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,                          // ✅ Adiciona isso
    "noImplicitAny": true,                   // ✅ Opcional (reforça ainda mais)
    "strictNullChecks": true,                // ✅ Opcional
    "forceConsistentCasingInFileNames": true // ✅ Bom para sistemas case-sensitive
  }
}
